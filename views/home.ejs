<%- include('layouts/main') -%>

<% contentFor('body') %>
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to <%= appName %></h1>
        <p class="lead">A minimal, simple blog built with Dapbase and Bootstrap</p>
    </div>

    <h2 class="mb-4">Latest Posts</h2>
    
    <% if (posts && posts.length > 0) { %>
        <div class="row">
            <% posts.forEach(post => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <% if (post.featured_image) { %>
                            <img src="<%= post.featured_image %>" class="card-img-top" alt="<%= post.title %>">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= post.title %></h5>
                            <p class="card-text text-muted">
                                <%= post.excerpt || post.content.substring(0, 150) + '...' %>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/post/<%= post.slug %>" class="btn btn-primary">Read More</a>
                            <small class="text-muted float-end">
                                <i class="bi bi-eye"></i> <%= post.views || 0 %>
                            </small>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-info">
            <h4 class="alert-heading">No posts yet!</h4>
            <p>Check back soon for updates.</p>
            <hr>
            <p class="mb-0">
                <a href="/admin" class="alert-link">Admin login</a> to create your first post.
            </p>
        </div>
    <% } %>
<% end %>